@using IctFinalProject.DTOs
@using IctFinalProject.Models
@{
    Layout = null;

    var orders = ViewData["Orders"] as List<OrderInfoViewModel>;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<style>
    * {
        margin: 0;
        padding: 0;
    }

    .top-logo {
        display: flex;
        justify-content: center;
    }

    .nav {
        background-color: lightgray;
        height: 50px;
        display: flex;
        justify-content: center;
    }

    .nav-btn {
        text-decoration: none;
        color: #3b3b3b;
        display: flex;
        align-items: center;
        margin: 0 10px;
    }

    .bold {
        font-weight: bold;
    }

    .top-menu {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
    }

        .top-menu > h1 {
            display: flex;
            justify-content: left;
            margin-left: 50px;
        }

        .top-menu > a {
            margin-right: 50px;
            background: #1b6ec2;
        }

    .btn {
        padding: 0 20px;
        border-radius: 10px;
        color: white;
        text-decoration: none;
        display: flex;
        align-items: center;
    }

    .table {
        margin: 50px 50px;
        display: flex;
        flex-direction: column;
    }

    .table-row {
        display: flex;
        justify-content: space-around;
        min-height: 40px;
    }

    .table-cell {
        display: flex;
        align-items: center;
        width: 40px;
    }
    
    .no-text-decoration {
        text-decoration: none;
    }

    .gray-row {
        background-color: lightgray;
    }

    .btn-status {
        padding: 5px 10px;
    }
    .red {
        background: #da2333;
    }
    .green {
        background: #1ccf49;
    }
    .blue {
        background: #1c55cf;
    }
</style>
<body>

    <div class="top-logo">
        <img src="images/logo.png" height="150" alt="">
    </div>

    <div class="nav">
        <a href="/" class="nav-btn">Products</a>
        <a href="/order" class="nav-btn bold">Orders</a>
    </div>


    <div class="table">
        <div class="table-row gray-row">
            <div class="table-cell">
                <h3>Order Code</h3>
            </div>
            <div class="table-cell">
                <h3>Phone Number</h3>
            </div>
            <div class="table-cell">
                <h3>Products</h3>
            </div>
            <div class="table-cell">
                <h3>Total Price</h3>
            </div>
            <div class="table-cell">
                <h3>Delivery time</h3>
            </div>
            <div class="table-cell">
                <h3>Status</h3>
            </div>            
        </div>
        @{int i = 1;}
        @foreach (var order in orders.OrderBy(x => x.OrderStatus))
        {
            <div class="table-row  @(i++ % 2 == 0 ? "gray-row": "")">
                <div class="table-cell">
                    <p>@order.OrderCode</p>
                </div>
                <div class="table-cell">
                    <p>@order.PhoneNumber</p>
                </div>
                <div class="table-cell">
                    <p>@String.Join(", ", order.Products.Select(x => x.Title).ToArray())</p>
                </div>                
                <div class="table-cell">
                    <p>@order.Products.Sum(x => x.Price)</p>
                </div>
                <div class="table-cell">
                    <p>@order.DeliveryTime.ToString("HH:mm:ss tt zz")</p>
                </div>
                <div class="table-cell" style="display: flex; flex-direction: column;">
                    @foreach (var orderStatus in Enum.GetNames(typeof(OrderStatus)))
                    {
                        <a href="/order/@order.OrderId/set-status/@((int)Enum.Parse(typeof(OrderStatus), orderStatus))"
                           class="btn-status @(order.OrderStatus.ToString().Equals(orderStatus) ? "bold" : "no-text-decoration")">
                            @orderStatus
                        </a>
                    }
                </div>
            </div>   
        }
    </div>

</body>
</html>
